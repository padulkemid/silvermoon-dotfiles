" Settings
let mapleader=","
set scrolloff=5
set ideajoin
set relativenumber

" Searching
set incsearch
set hlsearch
set ignorecase
set smartcase

" Plugins
Plug 'machakann/vim-highlightedyank'
Plug 'tpope/vim-commentary'

" Maps
"--- idea
map Q gq

"--- highlight
nmap <silent> <leader><leader> :noh<CR>

"--- escape
inoremap <C-c> <Esc>
xmap <C-c> "*y
xmap <C-v> "*p

"--- window
map <C-j> <C-W>j
map <C-k> <C-W>k
map <C-h> <C-W>h
map <C-l> <C-W>l

"--- texts
nnoremap n nzzzv
nnoremap N Nzzzv
nnoremap H ^
nnoremap L $
vnoremap H ^
vnoremap L g_

"--- emacs
inoremap <M-BS> <C-w>
inoremap <C-f> <Right>
inoremap <C-b> <Left>
inoremap <M-f> <C-o>w
inoremap <M-b> <C-o>b

"--- tabs
nmap <leader>tp gT<CR>
nmap <leader>tn gt<CR>

"--- actions
map <leader>ef <Action>(ReformatCode)
map <leader>f <Action>(SearchEverywhere)
map <leader>; <Action>(CloseContent)
map K <Action>(ShowHoverInfo)
map <leader>ca <Action>(ShowIntentionActions)
map <leader>gb <Action>(Annotate)
map <leader>sw <Action>(ShowUsages)
map <C-\><C-s> <Action>(Stop)
map <C-\><C-r> <Action>(Run)
map <C-\><C-t> <Action>(Debug)
map <C-\><C-c> <Action>(RunClass)
map <C-\><C-Space> <Action>(ToggleLineBreakpoint)
map gI <Action>(GotoImplementation)
map ]d <Action>(GotoNextError)
map [d <Action>(GotoPreviousError)
map grn <Action>(RenameElement)
map gca <Action>(GotoAction)
map gfp <Action>(SelectInProjectView)
map <leader>cfp <Action>(CopyAbsolutePath)
map <leader>ofp <Action>($LRU)